---
# Example secrets file
# Copy this to secrets.yml and add your actual values
# secrets.yml is gitignored and will not be committed
#
# Usage:
#   cp inventory/group_vars/all/secrets.yml.example inventory/group_vars/all/secrets.yml
#   vim inventory/group_vars/all/secrets.yml  # Edit with your actual values

# CloudStack API Keys (generate these from CloudStack UI after initial deployment)
# Leave empty until after running deploy-cloudstack.yml
# Generate in UI: Accounts -> admin -> View Users -> admin -> Generate Keys
cloudstack_api_key: ""
cloudstack_secret_key: ""

# Database passwords
mysql_root_password: "YOUR_MYSQL_ROOT_PASSWORD"
mysql_cloud_password: "YOUR_MYSQL_CLOUD_PASSWORD"

# VM root password (hashed with sha-512)
# Generate new hash with: openssl passwd -6 <password>
# Example below is hash for password "cloudstack"
vm_root_password_hash: "$6$iY7ylmYWnqbLb9wE$XlPNX4KzmN3iJ2zCfTqQMl.sRp6FdK77zobSjRD2.ntC71LTI082.aEgINXD8ux2kEIEyBCuaqIIxcmxTaeCN1"

# Root password for KVM compute hosts (used by CloudStack to add hosts)
# This should be the plaintext password that matches vm_root_password_hash above
kvm_host_root_password: "YOUR_KVM_ROOT_PASSWORD"
